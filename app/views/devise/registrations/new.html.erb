
<div class="columns is-centered">
  <div class="column is-half">
    <h1 class="title is-4">Sign up</h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input mb-3", required: true, placeholder: "E-mail" %>

      <%= f.password_field :password, autocomplete: "new-password", class: "input mb-3", required: true, placeholder: "Password" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input mb-3", required: true, placeholder: "Confirm password" %>
      <%= f.submit "Sign up", class: "button is-primary is-fullwidth" %>
    
  </div>
  <% end %>
</div>


